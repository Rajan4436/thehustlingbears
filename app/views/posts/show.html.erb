<div class="container">
  <div class="p-30">

    <p>
    <strong>Title:</strong>
    <%= @post.title %>
    </p>

    <p>
    <strong>Slug:</strong>
    <%= @post.slug %>
    </p>

    <p>
    <strong>Description:</strong>
    <%= @post.content %>
    </p>

    <p>
    <strong>Active:</strong>
    <%= @post.active %>
    </p>

    <p>
    <strong>Meta desc:</strong>
    <%= @post.meta_desc %>
    </p>

    <p>
    <strong>Meta keywords:</strong>
    <%= @post.meta_keywords %>
    </p>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
</div>
